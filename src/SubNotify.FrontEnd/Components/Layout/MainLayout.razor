@inherits LayoutComponentBase

<div class="page">
    <main>
        <div class="header" style="text-align: left;">
            <h1><a href="/" style="color: inherit; text-decoration: none;">Substitute Secretary Notification System</a></h1>

            <div style="position: absolute; top: 0; right: 0; padding:5px;">
                <AuthorizeView>
                    <Authorized>
                        Logged on as <b>@context.User.Identity.Name</b>
                    </Authorized>
                    <NotAuthorized>
                        <i>NOT LOGGED ON</i>>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
