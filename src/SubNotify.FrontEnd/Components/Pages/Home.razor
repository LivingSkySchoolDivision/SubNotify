@page "/"
@using System.Security.Claims

<PageTitle>Home</PageTitle>

<AuthorizeView>
     <Authorized>
         <h1>Hello, @context.User.Identity.Name!</h1>

         <p>
            Your claims are:

            <table class="table">
                <thead>
                    <tr>
                        <th>Claim Label</th>
                        <th>Claim Value</th>
                        <th>Claim Issuer</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(Claim claim in context.User.Claims) 
                    {
                        <tr>
                            <td>@(claim.Type)</td>
                            <td>@(claim.Value.ToString())</td>
                            <td>@(claim.Issuer)</td>
                        </tr>
                    }
                </tbody>
            </table>
         </p>
  
     </Authorized>
     <NotAuthorized>
         <p>Not Authorized</p>
     </NotAuthorized>
 </AuthorizeView>